{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules/**"],
  "compilerOptions": {
    "rootDir": "./src",
    "composite": true,
    "outDir": "./dist/main",
    "module": "CommonJS",
    "preserveValueImports": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "pretty": true,
    "lib": ["es2017", "dom"],
    "types": ["node"]
  }
}